!!!
%html
  %head
    %title Knowpickle
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'hoverIntent'
    = javascript_include_tag 'superfish'
    = javascript_include_tag 'jquery.jeditable.min'
    = csrf_meta_tag
  %body
    #wrapper
      #header
        .logo.navitem
          = link_to 'Knowpickle', root_path
        #main-navigation
          = render_navigation :expand_all => true
        #user-actions
          - if user_signed_in?
            %span.navitem
              Welcome #{link_to_current_user}!
            = link_to 'My account', my_account_path, :class => 'navitem'
            = link_to 'Sign out', logout_path, :class => 'navitem'
          - else
            = link_to 'Sign in', login_path, :class => 'navitem'
        .clear
      #contents
        %p.notice= notice
        %p.alert= alert
        = yield
