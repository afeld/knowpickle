!!!
%html
  %head
    %title Knowpickle
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.jeditable.min'
    = csrf_meta_tag
  %body
    .wrapper
      .header
        = link_to 'Knowpickle', root_path
      .user-actions
        - if user_signed_in?
          = link_to 'My account', my_account_path
          = link_to 'Sign out', logout_path
        - else
          = link_to 'Sign in', login_path
      .nav-bar
        %ul
          %li
            = link_to 'Topics', topics_path
            = render :partial => 'shared/topics_tree'
      .contents
        %p.notice= notice
        %p.alert= alert
        = yield
