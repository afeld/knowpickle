!!!
%html
  %head
    %title Knowpickle
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'hoverIntent'
    = javascript_include_tag 'superfish'
    = javascript_include_tag 'jquery.jeditable.min'
    = csrf_meta_tag
  %body
    #wrapper
      #header
        .logo.navitem
          = link_to image_tag('knowpickle_nav_logo.png', :alt => 'Knowpickle logo'), root_path
        #main-navigation
          = render_navigation :expand_all => true
        #user-actions
          %ul
            - if user_signed_in?
              %li.navitem
                Welcome #{link_to_current_user}!
              %li.navitem
                = link_to 'My account', my_account_path
              %li.navitem
                = link_to 'Sign out', logout_path
            - else
              %li.navitem
                = link_to 'Sign in', login_path
        .clear
      #contents
        %p.notice= notice
        %p.alert= alert
        = yield
