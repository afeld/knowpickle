!!!
%html
  %head
    %title Knowpickle
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'text'
    = stylesheet_link_tag '960'
    = stylesheet_link_tag 'superfish'
    = stylesheet_link_tag 'le-frog/jquery-ui-1.8.10.custom'
    = stylesheet_link_tag 'screen'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js'
    = javascript_include_tag :defaults
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.10/jquery-ui.min.js'
    = javascript_include_tag 'jquery-raty/js/jquery.raty.min'
    = javascript_include_tag 'hoverIntent'
    = javascript_include_tag 'superfish'
    = javascript_include_tag 'jquery.jeditable.min'
    = csrf_meta_tag
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-21242505-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    #header
      .container_12
        .logo.navitem.grid_2
          = link_to image_tag('knowpickle_nav_logo.png', :alt => 'Knowpickle logo'), root_path
        #main-navigation.grid_8
          = render_navigation :expand_all => true
        #user-actions.grid_2
          %ul
            - if user_signed_in?
              %li.navitem
                Welcome #{link_to_current_user}!
              %li.navitem
                = link_to 'My account', my_account_path
              %li.navitem
                = link_to 'Sign out', logout_path
            - else
              %li.navitem
                = link_to 'Sign in', login_path
                or
                = link_to 'Sign up', register_path
        .clear
    #wrapper
      #contents.container_12
        - if notice
          %p.notice= notice
        - if alert
          %p.alert= alert
        = yield
      .clear
    #footer
      This site is open source.  Fork and contribute #{link_to 'here', 'https://github.com/afeld/knowpickle'}.
