%h1
  = @topic.name
%h2 Resources
%ul
  - @topic.resources.each do |resource|
    %li
      %h3
        = link_to resource, resource
      .site
        = link_to resource.site, "http://#{resource.site}"
      .excerpt
        = resource.excerpt
      .rating
        Average rating:
        = resource.average_rating

= link_to 'Edit', edit_topic_path(@topic)
|
= link_to 'Back', topics_path
