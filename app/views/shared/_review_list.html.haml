%ul.review-list
  - if @new_review
    %li
      = form_for @new_review, :remote => true do |f|
        = f.hidden_field :resource_id
        = f.label :rating
        = f.select :rating, 1..5
        %br
        = f.text_area :comment
        %br
        = f.submit
  - @reviews.each do |review|
    %li
      = render review
