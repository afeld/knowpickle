%ul.review-list
  - if @new_review
    %li
      = form_for @new_review, :remote => true do |f|
        = f.hidden_field :resource_id
        = f.label :rating
        .stars-wrapper
          = f.select :rating, 1..5
        %br
        = f.text_area :comment, :rows => 5, :cols => 50
        %br
        = f.submit 'Submit review'
  - @reviews.each do |review|
    %li
      = render review
