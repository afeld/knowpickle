= form_for(@resource) do |f|
  - if @resource.errors.any?
    #error_explanation
      %h2
        = pluralize(@resource.errors.count, "error")
        prohibited this resource from being saved:
      %ul
        - @resource.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :topic_id
    %br
    = f.collection_select :topic_id, Topic.all, :id, :name
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :url
    %br
    = f.text_field :url
  .field
    = f.label :level
    %br
    = f.select :level, LEVELS
  .field
    = f.label :excerpt
    %br
    = f.text_area :excerpt
  .actions
    = f.submit
