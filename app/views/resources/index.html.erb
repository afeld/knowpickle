<h1>Listing resources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Excerpt</th>
    <th>Url</th>
    <th>Creator</th>
    <th>Topic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.name %></td>
    <td><%= resource.excerpt %></td>
    <td><%= resource.url %></td>
    <td><%= resource.creator_id %></td>
    <td><%= resource.topic_id %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

